<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>Birth year:</strong>
  <%= @author.birth_year %>
</p>



<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Published year</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @author.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.published_year %></td>
        <td><%= link_to 'Show', author_book_path(@author.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: [@author, @author.books.build] do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :published_year %>
    <%= form.date_select :published_year %>
  </div>
    <%= form.submit %>
<% end %>

<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
